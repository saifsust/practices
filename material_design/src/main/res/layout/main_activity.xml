<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_menu"
    android:orientation="vertical">

    <Button
        android:id="@+id/muslim_pro_viewer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/muslim_pro_button"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_top" />

    <Button
        android:id="@+id/recycleview_viewer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/recycleview_button"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/cardview_viewer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/cardview_viewer_button"
        android:textAlignment="center"
        />


    <Button
        android:id="@+id/appbar_viewer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/appbar_viewer_button"
        android:textAlignment="center"
        />


</androidx.appcompat.widget.LinearLayoutCompat>
